#!/usr/bin/env node

var settings = require('../settings');

if (process.argv[2] === 'init') {
    console.log('Initializing DB...');

    var mongo = require('../lib/models/mongo');
    mongo.init({counters: [
        {id: 'events', seq: 0}
    ]});

    return;
}

console.log('Starting Server...');

var app = require('../lib/app');
app.listen(settings.app.port);
